<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/main_page_gradient">


    <TextView
        android:id="@+id/home_sib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="@string/deleteAccount"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/employee_delete_account_regNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_sib"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:backgroundTint="#1e7888"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="@string/registrationNo"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#88ffffff"
        android:textCursorDrawable="@drawable/blinking_cursor_colour" />

    <Button
        android:id="@+id/employee_delete_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/home_sib"
        android:layout_alignRight="@+id/home_sib"
        android:layout_below="@+id/employee_delete_account_regNo"
        android:layout_marginTop="44dp"
        android:background="@drawable/delete_account_danger"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/deleteAccount"
        android:textColor="#fff"
        android:textSize="17sp" />

</RelativeLayout>